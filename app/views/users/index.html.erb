<div class="row">
	<div class="large-12 column">
		<p id="notice"><%= notice %></p>
		
		<h1>Listing Users</h1>
		
		<table>
		  <thead>
		    <tr>
			  <th>Pic</th>
		      <th>First name</th>
		      <th>Last name</th>
		      <th>Role</th>
		      <th>Email</th>
		      <th>Manager</th>
		      <th colspan="3"></th>
		    </tr>
		  </thead>
		
		  <tbody>
		    <% @users.each do |user| %>
		      <tr>
			    <td>
				    <% if user.image.url(:small) != "/images/small/missing.png" %>
				    	<%= image_tag(user.image.url(:small), :style => "width:20px;") %>
				    <% else %>
				    	<img src="http://www.coverbash.com/wp-content/themes/covers/images/blank_profile_pic.jpg" style="width:20px;" />
				    <% end %>
				</td>
		        <td><%= link_to user.first_name, user_path(user.id) %></td>
		        <td><%= user.last_name %></td>
		        <td><%= user.role %></td>
		        <td><%= user.email %></td>
		        <td>
			        <% if !user.manager.nil? %>
			        	<%= user.manager.first_name %> <%= user.manager.last_name %>
			        <% else %>
			        	No Manager
			        <% end %>
			    </td>
		        <td><%= link_to 'Show', user %></td>
		        <td><%= link_to 'Edit', edit_user_path(user) %></td>
		        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
		
		<br>
		
		<b>Import Products</b>
		<%= form_tag import_users_path, multipart:true do %>
			<br /><%= file_field_tag :file %>
			<%= hidden_field_tag :company_id, current_user.company.id %>
			<%= submit_tag "Import Users", class: "button radius small" %>
		<% end %>
		
		<%= link_to 'New User', new_user_path %>
	</div>
</div>
